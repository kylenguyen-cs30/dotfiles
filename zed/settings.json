// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Andromeda",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "autosave": "on_focus_change",
  "auto_update": true,
  "enable_language_server": true,
  "formatter": "language_server",
  "show_completions_on_input": true,
  "show_call_status_icon": true,
  "completion_documentation_secondary_query_debounce": 300,
  "language_overrides": {
    "python": {
      "enable_language_server": true,
      "language_server_command": "pyright"
    },
    "C": {
      "enable_language_server": true,
      "language_server_command": "clangd"
    },
    "CPP": {
      "enable_language_server": true,
      "language_server_command": "clangd"
    },
    "TypeScript": {
      "enable_language_server": true,
      "language_server_command": "typescript-language-server --stdio"
    },
    "JavaScript": {
      "enable_language_server": true,
      "language_server_command": "typescript-language-server --stdio"
    },
    "css": {
      "enable_language_server": true,
      "language_server_command": "css-lsp"
    },
    "html": {
      "enable_language_server": true,
      "language_server_command": "html-lsp"
    },
    "lua": {
      "enable_language_server": true,
      "language_server_command": "lua-lsp"
    }
  },
  "terminal": {
    "dock": "bottom",
    "blinking": "on",
    "font_size": 14,
    "font_family": "FiraCode Nerd Font Mono",
    "line_height": {
      "custom": 1.25
    },
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "HTML": {
      "auto_closing_tags": true
    }
  },
  "lsp": {
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": ["import/order"]
        }
      }
    },
    "javascript": {
      "inlayHints": {
        "includeInlayParameterNameHints": "all",
        "includeInlayParameterNameHintsWhenArgumentMatchesName": false,
        "includeInlayFunctionParameterTypeHints": true,
        "includeInlayVariableTypeHints": true,
        "includeInlayPropertyDeclarationTypeHints": true,
        "includeInlayFunctionLikeReturnTypeHints": true,
        "includeInlayEnumMemberValueHints": true
      }
    },
    "html": {
      "autoClosingTags": true
    },
    "vscode-html-language-server": {
      "settings": {
        "html": {
          "tagAutoclosing": true
        }
      }
    }
  },
  "completion": {
    "use_language_server": true,
    "trigger_on_type": true,
    "trigger_on_delete": true
  }
}
